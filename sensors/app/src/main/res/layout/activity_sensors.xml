<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.klbc.sensors.Sensors">

    <TextView
        android:id="@+id/txtview01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Sensor"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtview01"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/startAccelerometer"
                android:text="Start"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="onClickAcc"
                android:background="@drawable/button"/>
            <Button
                android:id="@+id/accelerometer"
                android:text="Accelerometer"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18sp"
                android:background="@drawable/button"/>
            <Button
                android:enabled="false"
                android:id="@+id/endAccelerometer"
                android:text="Stop"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:onClick="onClickAcc"
                android:background="@drawable/button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/startGyroscope"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="onClickGyro"
                android:text="Start"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <Button
                android:id="@+id/gyroscope"
                android:text="Gyroscope"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18sp"
                android:background="@drawable/button"/>

            <Button
                android:id="@+id/endGyroscope"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:enabled="false"
                android:onClick="onClickGyro"
                android:text="Stop"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/startCompass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="onClickCompass"
                android:text="Start"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <Button
                android:id="@+id/compass"
                android:text="Compass"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18sp"
                android:background="@drawable/button"/>

            <Button
                android:id="@+id/endCompass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:enabled="false"
                android:onClick="onClickCompass"
                android:text="Stop"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/startGps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="onClickGps"
                android:text="Start"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <Button
                android:id="@+id/gps"
                android:text="GPS"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18sp"
                android:background="@drawable/button"/>

            <Button
                android:id="@+id/endGps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:enabled="false"
                android:onClick="onClickGps"
                android:text="Stop"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/startBarometer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:onClick="onClickBarometer"
                android:text="Start"
                android:textAllCaps="false"
                android:textSize="18sp" />
            <Button
                android:id="@+id/barometer"
                android:text="Barometer"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18sp"
                android:background="@drawable/button"/>

            <Button
                android:id="@+id/endBarometer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:enabled="false"
                android:onClick="onClickBarometer"
                android:text="Stop"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >


            <Button
                android:id="@+id/wifi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/button"
                android:onClick="onClickWifi"
                android:text="WIFI"
                android:textAllCaps="false"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wifilabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Gathered Data"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#222222"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        </LinearLayout>
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:entries="@array/mobileSensors"
            android:background="#3b13bf">

        </Spinner>

    </LinearLayout>
</RelativeLayout>
